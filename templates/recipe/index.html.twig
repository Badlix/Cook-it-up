{% extends 'base.html.twig' %}

{% block title %}Hello RecipeController!{% endblock %}

{% block body %}
    <div class="px-40 flex min-h-screen py-5" data-controller="recipe">

        {# Colonne latérale pour les recettes #}
        <div class="bg-white shadow-md rounded-lg p-4 self-start max-w-xs">
            <h2 class="text-lg font-bold text-gray-700 mb-4">Recettes Récente</h2>

            <ul class="space-y-2">
                {% for recipe in generated_recipes %}
                    <li class="p-2 rounded-lg hover:bg-gray-100">
                        <p>{{ recipe }}</p>
                    </li>
                {% else %}
                    <li class="text-gray-500 text-sm">Aucune recette à afficher.</li>
                {% endfor %}
            </ul>
        </div>

        {# Contenu principal #}
        <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
            <div class="@container">
                <div class="@[480px]:p-4">
                    <div
                            class="flex min-h-[480px] flex-col gap-6 bg-cover bg-center bg-no-repeat @[480px]:gap-8 @[480px]:rounded-xl items-start justify-end px-4 pb-10 @[480px]:px-10"
                            style='background-image: linear-gradient(rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%), url("https://cdn.usegalileo.ai/sdxl10/d980a215-349e-4da8-9830-742c08e4fdc7.png");'
                    >
                        <h1
                                class="text-white text-4xl font-black leading-tight tracking-[-0.033em] @[480px]:text-5xl @[480px]:font-black @[480px]:leading-tight @[480px]:tracking-[-0.033em] text-center"
                        >
                            Find recipes based on ingredients
                        </h1>
                        <label class="flex flex-col min-w-40 h-14 w-full max-w-[480px] @[480px]:h-16">
                            <div class="flex w-full flex-1 items-stretch rounded-xl h-full">
                                <div
                                        class="text-[#637588] flex border border-[#dce0e5] bg-white items-center justify-center pl-[15px] rounded-l-xl border-r-0"
                                        data-icon="MagnifyingGlass"
                                        data-size="20px"
                                        data-weight="regular"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" viewBox="0 0 256 256">
                                        <path
                                                d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"
                                        ></path>
                                    </svg>
                                </div>
                                <input
                                        data-recipe-target="ingredientsInput"
                                        class="form-input flex w-full min-w-0 flex-1 resize-none rounded-xl text-[#111418] focus:outline-0 focus:ring-0 border border-[#dce0e5] bg-white focus:border-[#dce0e5] h-full placeholder:text-[#637588] px-[15px] rounded-r-none border-r-0 pr-2 rounded-l-none border-l-0 pl-2 text-sm font-normal leading-normal @[480px]:text-base @[480px]:font-normal @[480px]:leading-normal"
                                />
                                <div class="flex items-center justify-center rounded-r-xl border-l-0 border border-[#dce0e5] bg-white pr-[7px]">
                                    <button
                                            class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-xl h-10 px-4 @[480px]:h-12 @[480px]:px-5 bg-[#5ea5ed] text-[#111418] text-sm font-bold leading-normal tracking-[0.015em] @[480px]:text-base @[480px]:font-bold @[480px]:leading-normal @[480px]:tracking-[0.015em]"
                                            data-action="click->recipe#search"
                                            data-recipe-target="searchButton"
                                    >
                                        <span class="truncate">Search</span>
                                    </button>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>
            </div>
            <div data-recipe-target="recipeMain" class="hidden flex flex-col">
                <h2 class="text-[#111418] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5" data-recipe-target="recipeTitle"></h2>

                <h3 class="text-[#111418] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Description:</h3>
                <div data-recipe-target="recipeDesc"></div>

                <h3 class="text-[#111418] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Ingredients: </h3>
                <div data-recipe-target="recipeIngredients"></div>

                <h3 class="text-[#111418] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Préparations: </h3>
                <div data-recipe-target="recipeSteps"></div>
            </div>
            <div data-recipe-target="recipeLoader" class="w-full hidden items-center justify-center">
                <img src="https://loading.io/assets/mod/spinner/spinner/lg.gif" alt="loader">
            </div>
        </div>
    </div>
{% endblock %}