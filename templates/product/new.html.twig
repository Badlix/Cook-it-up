{% extends 'base.html.twig' %}

{% block title %}Créer un produit{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-2xl font-semibold text-center text-gray-700 mb-6">Créer un produit</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            {# Nom du produit #}
            <div>
                {{ form_label(form.name, 'Nom du produit', {'label_attr': {'class': 'block text-gray-600 font-medium mb-1'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full rounded-md border-gray-300 p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-sm text-red-500'}}) }}
            </div>

            {# Description du produit #}
            <div>
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-gray-600 font-medium mb-1'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'w-full rounded-md border-gray-300 p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-sm text-red-500'}}) }}
            </div>

            {# Quantité du produit #}
            <div>
                {{ form_label(form.quantity, 'Quantité', {'label_attr': {'class': 'block text-gray-600 font-medium mb-1'}}) }}
                {{ form_widget(form.quantity, {'attr': {'class': 'w-full rounded-md border-gray-300 p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.quantity, {'attr': {'class': 'text-sm text-red-500'}}) }}
            </div>

            {# Prix du produit #}
            <div>
                {{ form_label(form.price, 'Prix (€)', {'label_attr': {'class': 'block text-gray-600 font-medium mb-1'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'w-full rounded-md border-gray-300 p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.price, {'attr': {'class': 'text-sm text-red-500'}}) }}
            </div>

            {# Bouton de soumission #}
            <div class="pt-4">
                {{ form_widget(form.save, {'attr': {'class': 'w-full bg-blue-500 text-white py-2 rounded-md font-medium hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-400'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}